@model MVCFruitStore.Models.User

@{
    ViewData["Title"] = "Index";
    string err_msg = (String)ViewData["login_error"];
}

<head>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>

    <script src="~/js/site.js" type="text/javascript"></script>
    <link href="~/CSS/UserLogin.css" rel="stylesheet" type="text/css" />
</head>
<body class="login">
    <h4>Welcome to Fresh Fruits </h4>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {

        <table>
            <tr>
                <td>@Html.LabelFor(x => x.Name)</td>
                <td><input type="text" name="Name" id="name" required /></td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Password)&nbsp;</td>
                <td><input type="password" name="Password" id="password" required /></td>
            </tr>
            <tr>
                <td></td>
                <td id="login_error_msg">@err_msg</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="Submit" value="Login" id="login" /></td>
            </tr>
        </table>
    }
</body>